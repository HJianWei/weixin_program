.gn{background:#1AAD16}
.bu{background:dodgerblue}
.rd{background:orangered}
.og{background:orange}
.lb{background:lightskyblue}
.list{
  padding-bottom:28vw;
}
.view-body{
  flex:1;
  width:100%;
  height:13vw;
  border-bottom: 1px solid #DADADA;
}
.item{
  height: 13vw;
  line-height: 13vw;
  width: 160%
}
.item .content{
  width: 80%;
  float: left;
}
.item .content .text{
  vertical-align: top;
  margin-left: 3vw;
}
.item .menu{
  width: 10%;
  float: left;
  text-align: center;
  color:snow;
}
.add {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  background: #393F4F;
  color: #ffffff;
  font-weight: bold;
  font-size: 60rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 16rpx; 
  text-align: center;
  border-radius: 50%;
  box-shadow: 0 0 8px 1px #666699;
  z-index: 1000;
} 



