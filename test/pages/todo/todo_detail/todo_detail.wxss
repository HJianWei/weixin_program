/* pages/todo/todo_detail/todo_detail.wxss */
.box{
  display: flex;
  align-items: center;
}
.title{
  margin:0.5vw 1.5vw 0 1.25vw;
  border: 0.1vw solid #DADADA;
  border-radius: 1.5vw;
  width: 70%;
  padding:2vw;
  float: left;
}
.btn{
  background-color: #ffffff;
  width:20vw;
  color:#1AAD16;
}
.gn{background:#8ab839}
.bu{background:dodgerblue}
.rd{background:orangered}
.og{background:orange}
.lb{background:lightskyblue}
.list{
  padding-bottom:28vw;
}
.view-body{
  flex:1;
  width:100%;
  height:13vw;
  border-bottom: 1px solid #DADADA;
}
.item{
  height: 13vw;
  line-height: 13vw;
  width: 160%
}
.item .content{
  display: flex;
  align-items: center;
  width: 80%;
  float: left;
}
.item .content .pic{
  width: 25px; 
  height: 25px;
  margin-left: 3vw;
}
.item .content .text{
  vertical-align: top;
  margin-left: 3vw;
}
.item .content .text-finish{
  vertical-align: top;
  text-decoration: line-through;
  margin-left: 3vw;
  color:#AAA;
}
.item .menu{
  width: 10%;
  float: left;
  text-align: center;
  color:snow;
}
.get_complete{
  margin-top: 5vw;
  border-radius: 1.5vw;
  background-color: #8ab839;
  color: #ffffff;
  width:42%;
  height:8vw;
  line-height: 8vw;
}
